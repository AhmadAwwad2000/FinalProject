<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainpage">
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_4"
    tools:context=".mainpage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/userandadmin"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/textview"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/userandadmin"
        android:textSize="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="8dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/you_can_choose_you_want"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/spinner"
        android:id="@+id/spinner"
        />
    <Button
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:textSize="20dp"
        android:textStyle="bold"
        style="@style/btn"
        android:text="@string/go_to_your_choose"
        android:onClick="spinneronclick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn"
            android:layout_marginTop="50dp"
            android:text="@string/create_admin_or_user_account"
            android:onClick="createaccount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textveiw"
        android:text="to reserve room for user click here"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@drawable/img_4"
        tools:context=".mainpage">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="50dp"
            android:hint="Enter the user name here"
            android:id="@+id/username"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="@string/reserve"
            android:onClick="res"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>