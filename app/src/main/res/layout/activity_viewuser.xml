<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_5"
    tools:context=".viewuser">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="@string/view_user"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:padding="8dp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".viewuser">
    <EditText
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/username"
        android:hint="@string/enter_the_name"
        android:gravity="center"
        android:background="@color/white"

        />

    <Button
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_height="50dp"
        android:text="@string/search"
        android:id="@+id/btnSearch"
        android:onClick="btnSearch_Click"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/lstuser"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/viewuser"
        android:background="@color/white"
        android:textSize="22dp"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/if_you_want_show_all_user_click_on_button"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="250dp"
        android:layout_height="63dp"
        android:text="@string/show_all_user"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        style="@style/btn"
        android:onClick="viewall"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstalluser"/>


</androidx.appcompat.widget.LinearLayoutCompat>